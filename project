//เปลี่ยนเป็นการจองที่เหมาะสม
char* clearOverData(){
    char Data[1024];
    if (fgets(Data,sizeof(Data),stdin) == NULL){
        return NULL;
    }
    Data[strcspn(Data,"\n")] = 0;
    char *str = malloc(strlen(Data)+1);
    if(str == NULL){
        return NULL;
    } 
    strcpy(str,Data);
    return str;
}
